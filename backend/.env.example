# GCP Configuration - Multi-Environment Support
# Set ACTIVE_ENV to switch between environments: BLD, INT, PRE, PROD
ACTIVE_ENV=BLD

# BLD Environment
GCP_PROJECT_ID_BLD=your-project-id-bld
GCP_DATASET_ID_BLD=your-dataset-bld
GOOGLE_APPLICATION_CREDENTIALS_BLD=./service-account-bld.json

# INT Environment
GCP_PROJECT_ID_INT=your-project-id-int
GCP_DATASET_ID_INT=your-dataset-int
GOOGLE_APPLICATION_CREDENTIALS_INT=./service-account-int.json

# PRE Environment
GCP_PROJECT_ID_PRE=your-project-id-pre
GCP_DATASET_ID_PRE=your-dataset-pre
GOOGLE_APPLICATION_CREDENTIALS_PRE=./service-account-pre.json

# PROD Environment
GCP_PROJECT_ID_PROD=your-project-id-prod
GCP_DATASET_ID_PROD=your-dataset-prod
GOOGLE_APPLICATION_CREDENTIALS_PROD=./service-account-prod.json

# API Configuration
PORT=3001
API_KEY=your-secret-api-key-change-this
ALLOWED_ORIGINS=http://localhost:3000

# Rate Limiting
MAX_QUERIES_PER_HOUR=100
MAX_BYTES_PER_QUERY=10737418240

# Development
NODE_ENV=development
